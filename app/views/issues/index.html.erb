      <% wday_num += 1 %>
    <% end %>
    <div class = "time_disp" id = <%= "time_disp_#{i}"%>> <%= hour %>:00 </div>
    <div class = "vertical_line" id = <%= "vertical_line_#{i}"%>></div>
    <% hour += 1 %>
  <% end %>
</div>
