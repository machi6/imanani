<div class = "issue" id = <%= "issue_#{product.id}_#{issue.id}"%>>
  <%= issue.summary %>
  <div class = "issue-commands-wrapper">
    <div class = "issue-commands">
      <%= link_to '詳細・編集', edit_user_product_issue_path(product.user_id, issue.product_id, issue.id), class: "issue-command-edit"%>
