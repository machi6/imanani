<div class = "registration-issue-wrapper">
  <div class = "registration-issue-title" ><b>課題を追加</b></div>
  <%= form_with model: @issue, url: user_product_issues_path, method: :post, local: true do |f| %>
    表題：<%= f.text_field :summary, class: "issue-summary"%>
  <br>
  <%= f.text_area :description, class: "issue-text", placeholder:"課題の詳細説明（ 1,000文字まで）" ,rows:"5" ,maxlength:"1000" %>
  <br>
  画像を追加:
  <div class = "registration-issue-bottom">
    <div><%= f.file_field :image, id:"item-image"%></div>
    <div><%= f.submit "新規作成する" %></div>
  </div>
  <% end %>
  <br><br>
  <%=link_to 'もどる', user_path(@user.id) %>
