<div class = "registrations-wrapper">
  <div class = "registrations-top-message">ユーザー新規登録</div>
  <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
    <div class = "registrations-item">名前：</div>
    <%= f.text_field :nickname, placeholder:"例) 山田太郎", maxlength:"40", class:"registrations-name" %>
    <div class = "registrations-item">email:</div>
    <%= f.email_field :email, placeholder:"例)xxxx@xxxx", autofocus: true, class:"registrations-email"%>
    <div class = "registrations-item">パスワード：</div>
    <%= f.password_field :password, id:"password", placeholder:"6文字以上の半角英数字" , class:"registrations-password"%>
    <div class = "registrations-item">パスワード（確認）：</div>
    <%= f.password_field :password_confirmation, id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" , class:"registrations-password-confirmation"%>
    <div class = "registrations-item"><%= f.submit "新規登録" , class:"user-registration-btn"%></div>
  <%end%>
  <%=link_to 'エントランスページへ戻る', new_user_session_path %>
</div>